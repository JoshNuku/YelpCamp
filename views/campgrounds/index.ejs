<% layout('./layouts/boilerplate.ejs') %>
<div id="map" class="rounded" style="width: 100%; height: 500px"></div>
<h1 class="text-center display-4 mb-3">All Campgrounds</h1>

<% for( let i of camp ) { %>
<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img
        src="<%= i.images[0].url %>"
        class="img-fluid rounded-start"
        alt=""
      />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= i.title %></h5>
        <p class="card-text"><%=i.description%></p>
        <p class="card-text">
          <small class="text-body-secondary"><%= i.location %></small>
        </p>

        <a href="/campgrounds/<%= i._id %>"
          ><button class="btn btn-primary">View this campground</button></a
        >
      </div>
    </div>
  </div>
</div>
<% } %>
<script>
  const campgrounds = {features:<%-JSON.stringify(camp)%>}
</script>
<script src="/js/clusterMap.js"></script>
