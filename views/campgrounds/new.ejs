<% layout('./layouts/boilerplate.ejs') %>
<h1 class="mt-3 text-center">New Campground</h1>
<div class="row justify-content-center">
  <div class="col-6 rounded m-3 p-3">
    <form
      action="/campgrounds"
      method="post"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label fs-5">Title</label>
        <input
          type="text"
          class="form-control"
          id="title"
          placeholder="Enter Campground name"
          name="campground[title]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label fs-5">Location</label>
        <input
          type="text"
          class="form-control"
          id="location"
          placeholder="Enter Campground location"
          name="campground[location]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label fs-5">Price</label>
        <div class="input-group flex-nowrap">
          <span class="input-group-text" id="addon-wrapping">$</span>
          <input
            class="form-control"
            id="price"
            placeholder="Enter Campground price"
            name="campground[price]"
            aria-label="price"
            aria-describedby="addon-wrapping"
            required
          />
        </div>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="formFileMultiple" class="form-label"
          >Upload Images...</label
        >
        <input
          name="image"
          class="form-control"
          type="file"
          id="formFileMultiple"
          multiple
        />

        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label fs-5">Description</label>
        <textarea
          class="form-control"
          id="description"
          rows="3"
          name="campground[description]"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-primary mb-3">Add campground</button>
    </form>
  </div>
</div>
